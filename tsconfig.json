{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "$/*": [
                "./"
            ]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "target": "esnext",
        "types": [
            "node",
            "dotenv"
        ]
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src/**/*.ts"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}
